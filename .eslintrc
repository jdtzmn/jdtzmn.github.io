{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "typescript-eslint-parser"
  },
  "extends": [
    "plugin:vue/recommended",
    "typescript",
    "standard"
  ],
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true
  },
  "plugins": [
      "node",
      "vue",
      "standard",
      "import",
      "promise" 
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js", "**/*.spec.js", "./src/setupTests.js"]}]
  }
}